<header>
  <h1 class="title">Playa<i class="fa fa-play"></i></h1>
  <nav>
    <%if @current_user.present? %>
      <div class="nav-links">
        <ul>
          <li class="nav-link nav-link-username">Username</li>
          <li class="nav-link nav-link-new-playlist">New playlist</li>
          <li class="nav-link nav-link-my-playlists">My playlists</li>
          <li class="nav-link nav-link-log-out">Log out</li>
        </ul>
      </div>
    <%else%>
      <div class="nav-links">
        <ul>
          <li class="nav-link nav-link-log-in"><a href="#login">Log in</a></li>
          <li class="nav-link nav-link-sign-up"><a href="#signup">Sign up</a></li>
        </ul>
      </div>
    <%end%>
  </nav>
</header>
<div id="main"></div>

<script id="userLogInView-template" type="text/x-template">
  <h2>Log in</h2> 
  <form> 
    <div>
      <label for="username">Username</label><br> 
      <input id="username" placeholder="Enter your username"></input> 
    </div> 
    <div>
      <label for="password">Password</label><br>
      <input id="password" placeholder="Enter your password"></input> 
    </div> 
    <button class="btn log-in-btn">Log in</button> 
  </form>  
</script>

<script id="userSignUpView-template" type="text/x-template">
  <h2>Sign up</h2> 
  <form> 
    <div>
      <label for="username">Username</label><br> 
      <input id="username" placeholder="Enter your username"></input> 
    </div> 
    <div>
      <label for="email">Email</label><br> 
      <input id="email" placeholder="Enter your email"></input> 
    </div> 
    <div>
      <label for="password">Password</label><br>
      <input id="password" placeholder="Enter your password"></input> 
    </div> 
    <div>
      <label for="password_confirmation">Password Confirmation</label><br>
      <input id="password_confirmation" placeholder="Confirm password"></input>
    </div> 
    <button class="btn sign-up-btn">Sign up</button> 
  </form>  
</script>

<script id="newPlaylistView-template" type="text/x-template">
  <h2><span class="step">Step1: </span>Make new playlist</h2> 
  <form> 
    <div>
      <label for="name">Name</label><br> 
      <input id="name" placeholder="Enter playlist name"></input> 
    </div> 
    <button class="btn new-playlist-btn">Go!</button> 
  </form>  
</script>

<script id="addSongsView-template" type="text/x-template">
  <h2><span class="step">Step2: </span>Add songs</h2> 
  <form> 
    <div>
      <label for="url">Song URL</label><br> 
      <input id="url" placeholder="https://soundcloud.com/thepreatures/ithyf"></input> 
    </div> 
    <div>
      <label for="url">Song URL</label><br> 
      <input id="url" placeholder="https://soundcloud.com/alabamashakes/hold-on"></input> 
    </div> 
    <div>
      <label for="url">Song URL</label><br> 
      <input id="url" placeholder="https://soundcloud.com/asgeirmusic/asgeir-king-and-cross"></input> 
    </div> 
    <button class="btn add-songs-btn">Go!</button> 
  </form>  
</script>

<script id="sharePlaylistView-template" type="text/x-template">
  <h2><span class="step">Step3: </span>Share playlist</h2> 
  <p>Your playlist URL is: </p>
  <a href="">View Playlist</a>
</script>

<script id="myPlaylistsView-template" type="text/x-template">
  <h2>My playlists</h2> 

</script>


