        <ul>
          <li class="nav-link nav-link-username">{{username}}</li>
          <li class="nav-link nav-link-new-playlist"><a href="#newplaylist">New playlist</a></li>
          <li class="nav-link nav-link-my-playlists"><a href="#myplaylists">My playlists</a></li>
          <li class="nav-link nav-link-log-out"><a href="logout">Log out</a></li>
        </ul>
      </div>
    </nav>
  </header>
</script>

<script id="userLoggedOutView-template" type="text/x-template">
   <header>
