    </div> 
    <div>
      <label for="email">Email</label><br> 
      <input id="email" placeholder="Enter your email"></input> 
    </div> 
    <div>
      <label for="password">Password</label><br>
      <input id="password" type="password" placeholder="Enter your password"></input> 
    </div> 
    <div>
      <label for="password_confirmation">Password Confirmation</label><br>
      <input id="password_confirmation" type="password" placeholder="Confirm password"></input>
    </div> 
    <button class="btn sign-up-btn">Sign up</button> 
  </form>  
</script>

