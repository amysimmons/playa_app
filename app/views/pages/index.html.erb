<script id="newPlaylistView-template" type="text/x-template">
  <h2><span class="step">Step1: </span>Make new playlist</h2> 
  <form> 
    <div>
      <label for="name">Name</label><br> 
      <input id="name" placeholder="Enter playlist name"></input> 
    </div> 
    <div>
      <label for="song_limit">No. of songs per guest</label><br> 
      <input id="song-limit" type="number" min="1" max="100" placeholder="Enter song limit"></input> 
    </div>
    <button class="btn new-playlist-btn">Go!</button> 
  </form>  
</script>

<script id="addSongsView-template" type="text/x-template">
  <h2><span class="step">Step2: </span>Add songs</h2> 
  <form> 
    <div>
      <label for="url">Song URL</label><br> 
      <input id="url1" placeholder="https://soundcloud.com/thepreatures/ithyf"></input> 
    </div> 
    <div>
      <label for="url">Song URL</label><br> 
      <input id="url2" placeholder="https://soundcloud.com/alabamashakes/hold-on"></input> 
    </div> 
    <div>
      <label for="url">Song URL</label><br> 
      <input id="url3" placeholder="https://soundcloud.com/asgeirmusic/asgeir-king-and-cross"></input> 
    </div> 
    <button class="btn add-songs-btn">Go!</button> 
    <a href="#shareplaylist">Skip step</a>
  </form>  
</script>

<script id="sharePlaylistView-template" type="text/x-template">
  <h2><span class="step">Step3: </span>Share playlist</h2> 
  <p>Your playlist URL is: <a href="#{{user.username}}/{{playlist.playlist_url}}">www.playa-app.herokuapp.com/#{{user.username}}/{{playlist.playlist_url}}</a></p>
  <a href="#{{user.username}}/{{playlist.playlist_url}}" class="go-to-playlist">View Playlist</a>
</script>

